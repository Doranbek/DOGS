@model WEBDOG.Data.DogDaary


@{
    ViewData["Title"] = "Изменить";
    Layout = "~/Views/Shared/_Layout.cshtml";
 }

  <h1>Изменить данные о лечении</h1>

   <hr />
   <div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DogId" />
            
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="Dose" class="control-label"></label>
                <input  asp-for="Dose" step="0.01" type="number" class="form-control"/>
                <span asp-validation-for="Dose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a class ="btn btn-dark" asp-area="" asp-controller="Dog" asp-action="Index">Назад</a>
            </div>
        </form>
    </div>
 
 </div>


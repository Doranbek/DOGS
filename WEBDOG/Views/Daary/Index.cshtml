@model IEnumerable<WEBDOG.Data.DogDaary>

@{
    ViewData["Title"] = "Daary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Даарылоо</h1>

 <a asp-action="Create" class="btn btn-primary">Добавить новый запись</a>

<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Dog)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.PersonId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disease)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrugId)

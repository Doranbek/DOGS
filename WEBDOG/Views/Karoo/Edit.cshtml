@model WEBDOG.Data.DogKaroo

@{
    ViewData["Title"] = "Изменит";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Изменит запись</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DogId" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityDrug" class="control-label"></label>
                <input asp-for="QuantityDrug" class="form-control" />
                <span asp-validation-for="QuantityDrug" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                    <a class="btn btn-dark" asp-area="" asp-controller="Dog" asp-action="Index">Назад</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@
    <script type="text/javascript">
         
      
        $.validator.methods.range = function (value, element, param) 
        {
          var globalizedValue = value.replace(",", ".");
          return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
        }
 
        $.validator.methods.number = function (value, element)
        {
          return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
        }

        //$.validator.methods.number = function(value, element) {
        //    return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:\.\d{3})+)?(?:,\d+)?$/.test(value);
        //}

    </script>
}

@page
@model LoginModel

@{
    ViewData["Title"] = "Авторизация";
}

@*<h1>@ViewData["Title"]</h1>*@

<div class="container-login100">
    <div class="row d-flex justify-content-center align-items-center">
       @* <div class="col-xs-12 col-sm-8 col-md-8 col-lg-5 col-xl-4 border">*@
        <section >
            
            <form id="account" method="post">
                @*<h2>Use a local account to log in Kesha.</h2>*@
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <label asp-for="Input.Email" class="form-label">Логин</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                   
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <label asp-for="Input.Password" class="form-label">Пароль</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group"> 
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe"> 
                            <input asp-for="Input.RememberMe" /> 
                            <i>запомнит</i>
                        </label> 
                    </div> 
                </div> 
                <div>
                    <button id="login-submit" type="submit" class="btn btn-lg btn-success btn-block">Войти</button>
                </div>
                @*<div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>*@
            </form>
            
        </section>
    </div>
    
    @*</div>*@
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}